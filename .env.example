# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (for production)
# Dla Docker: postgresql://minicrm_user:minicrm_password@db:5432/minicrm
# Dla lokalnego: postgresql://user:password@localhost:5432/minicrm
# Dla SQLite (domyślnie): zostaw puste
DATABASE_URL=postgresql://user:password@localhost:5432/minicrm

# AI Integration (Optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
# OPENAI_API_KEY=your-openai-api-key-here

# ==============================================================================
# COMARCH ERP XL API CONFIGURATION
# ==============================================================================

# Podstawowy URL do API ERP (bez końcowego slasha)
# Przykłady:
#   COMARCH_API_URL=https://twoj-serwer-erp.com/api
#   COMARCH_API_URL=http://192.168.1.100:8080/api
COMARCH_API_URL=

# Autoryzacja - opcja 1: API Key / Bearer Token
COMARCH_API_KEY=

# Autoryzacja - opcja 2: Basic Auth (username + password)
COMARCH_API_USER=
COMARCH_API_PASSWORD=

# Timeout dla requestów HTTP (w sekundach)
COMARCH_TIMEOUT=30

# Włącz/wyłącz integrację z ERP
ERP_INTEGRATION_ENABLED=False

# Czy używać cache dla danych ERP?
ERP_CACHE_ENABLED=False

# ==============================================================================
# DOCKER CONFIGURATION
# ==============================================================================

# Superuser (tworzony automatycznie przy pierwszym uruchomieniu)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=admin123
DJANGO_SUPERUSER_EMAIL=admin@example.com
